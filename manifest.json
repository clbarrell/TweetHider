{
  "name": "HideTweets",
  "description": "To hide thread saving tweets",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["storage"],
  "icons": {
    "16": "/images/Icon16.png",
    "32": "/images/Icon32.png",
    "48": "/images/Icon48.png",
    "128": "/images/Icon128.png"
  }
}
